<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_team"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.qiang.maketeamapp.AddTeam"
    tools:showIn="@layout/activity_add_team">
    <TextView
        android:id="@+id/team_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="活动标题："/>
    <EditText
        android:id="@+id/team_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入活动名称"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/team_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="活动描述："/>
    <EditText
        android:id="@+id/team_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:hint="请描述该项活动"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/team_category"
            android:text="活动类别："
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_category"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/team_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="活动时间："/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="设置日期"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="设置时间"
                android:textSize="12sp"
                android:textColor="@color/blue"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/team_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="活动地点："/>
    <EditText
        android:id="@+id/place_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1" />
    <TextView
        android:id="@+id/team_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="活动人数："
        />
    <EditText
        android:id="@+id/team_number_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLines="1" />
    <TextView
        android:id="@+id/team_demand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="参与要求："/>
    <EditText
        android:id="@+id/team_demand_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3" />


</LinearLayout>
